  <view class="service-policy">
    <view class="item">一站式轻松采购</view>
    <view class="item">24小时无忧售后</view>
    <view class="item">免费专车配送</view>
  </view>
  <view class="no-cart" wx:if="{{cart.items.length <= 0}}">
    <view class="c">
      <image src="http://nos.netease.com/mailpub/hxm/yanxuan-wap/p/20150730/style/img/icon-normal/noCart-a8fe3f12e5.png" />
      <text>去添加点什么吧</text>
    </view>
  </view>
  <view class="cart-view" wx:if="{{cart.items.length > 0}}">
    <view class="list">
      <view class="group-item">
        <view class="goods">
          <view class="item {{isEditCart ? 'edit' : ''}}" wx:for="{{cart.items}}" wx:key="id">
            <view class="checkbox {{item.isChecked ? 'checked' : ''}}" bindtap="checkedItem" data-item-index="{{index}}"></view>
            <view class="cart-goods">
              <image class="img" src="{{item.productImage}}"></image>
              <view class="info">
                <view class="t">
                  <text class="name">{{item.productName}}</text>
                  <text class="num">x{{item.quantity}}</text>
                </view>
                <view class="attr">{{ isEditCart ? '已选择:' : ''}}{{item.variationString}}</view>
                <view class="b">
                  <text class="price">￥{{item.productPrice}}</text>
                  <view class="selnum">
                    <view class="cut" bindtap="cutNumber" data-item-index="{{index}}">-</view>
                    <input value="{{item.quantity}}" class="number" disabled="true" type="number" />
                    <view class="add" bindtap="addNumber" data-item-index="{{index}}">+</view>
                  </view>
                </view>
              </view>
            </view>
          </view>
        </view>
      </view>
