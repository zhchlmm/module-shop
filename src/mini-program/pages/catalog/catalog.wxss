page {
  height: 100%;
}

.container {
  background: #f9f9f9;
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
}

.search {
  height: 88rpx;
  width: 100%;
  padding: 0 30rpx;
  background: #fff;
  display: flex;
  align-items: center;
}

.search .input {
  width: 690rpx;
  height: 56rpx;
  background: #ededed;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.search .icon {
  background: url(http://yanxuan.nosdn.127.net/hxm/yanxuan-wap/p/20161201/style/img/icon-normal/search2-2fb94833aa.png) center no-repeat;
  background-size: 100%;
  width: 28rpx;
  height: 28rpx;
}

.search .txt {
  height: 42rpx;
  line-height: 42rpx;
  color: #666;
  padding-left: 10rpx;
  font-size: 30rpx;
}

.catalog {
  /* flex: column; */
  width: 100%;
  background: #fff;
  display: flex;
  border-top: 1px solid #fafafa;
  padding: 20rpx;
}

.products {
  /* flex: column; */
  width: 100%;
  background: #fff;
  display: flex;
  border-top: 1px solid #fafafa;
}
.catalog .nav {
  width: 100%;
  /* height: 150rpx; */
}

.catalog .nav .item {
  text-align: center;
  /* width: 120rpx; */
  /* height: 120rpx; */
  display: inline-block;
  /* color: #333; */
  /* font-size: 28rpx; */
  /* border-left: 6rpx solid #fff; */
  padding-bottom: 10rpx;
}

.catalog .nav .item.active {
  color: #ab2b2b;
  font-size: 24rpx;
  border-bottom: 6rpx solid #ab2b2b; 
}
.products .cate {
  border-left: 1px solid #fafafa;
  flex: 1;
  width:182rpx;
  height: 860rpx;
  padding: 0 10rpx 0 10rpx;
}

.banner {
  /* display: block; */
  height: 192rpx;
  width: 100%;
  /* position: relative; */
}

.banner .image {
  /* position: absolute;
  top: 0;
  left: 0; */
  border-radius: 4rpx;
  height: 192rpx;
  width: 100%;
}

.banner .txt {
  position: absolute;
  top: 30rpx;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
  left: 0;
  height: 162rpx;
  line-height: 192rpx;
  width: 100%;
}

.products .hd {
  height: 128rpx;
  width: 100%;
  display: flex;
  flex-direction:column;
  justify-content: center;
  align-items: left;
  padding-left: 0rpx;
}

.products .hd .txt {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  padding-left: 20rpx;
  padding-bottom: 10rpx;
  width: auto;
}

.products .hd .line {
  width: 100%;
  height: 1px;
  background: #d9d9d9;
}

.products .bd {
  height: auto;
  width: 100%;
  overflow: hidden;
}

.products .bd .item {
  display: block;
  /* float: left; */
  /* height: 216rpx; */
  text-align: left;
  width: 182rpx;
  /* margin-right: 34rpx; */
}

.products .bd .item.active {
  background: #d9d9d9;
}

.products .bd .item.last {
  margin-right: 0;
}

.catalog .item .icon {
  height: 80rpx;
  width: 80rpx;
  border-radius: 50%;
}

.products .bd .item .txt {
  display: block;
  padding-left: 20rpx;
  font-size: 24rpx;
  color: #333;
  line-height: 72rpx;
  width: 144rpx;
}